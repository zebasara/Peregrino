<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado de Ã©xito -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_success" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_success" />
        </shape>
    </item>

    <!-- Estado de error -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_error" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_error" />
        </shape>
    </item>

    <!-- Estado normal/info -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_info" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/status_info" />
        </shape>
    </item>

</selector>
