<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Card principal -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>

</layer-list>