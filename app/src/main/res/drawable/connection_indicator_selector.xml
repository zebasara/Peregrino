<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Conectado -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/connection_connected" />
        </shape>
    </item>

    <!-- Conectando (animado) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/connection_connecting" />
        </shape>
    </item>

    <!-- Desconectado -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/connection_disconnected" />
        </shape>
    </item>

</selector>
