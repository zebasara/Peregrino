<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra inferior sutil -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/> <!-- Sombra suave (10% opacidad negro) -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Fondo principal con color de estado -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF3E0"/> <!-- Color de fondo (puedes cambiar segÃºn estado) -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#FFB74D"/> <!-- Borde leve naranja suave -->
        </shape>
    </item>
</layer-list>
