<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout"
    android:background="@drawable/gradient_background">

    <!-- Mapa principal con diseño glassmorphism -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp">

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/map_glassmorphism_border" />
        </org.osmdroid.views.MapView>

    </androidx.cardview.widget.CardView>

    <!-- ✅ PANEL SUPERIOR FIJO - NO SE EXPANDE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topInfoCard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@android:color/transparent">

        <!-- ✅ USAR ConstraintLayout PARA CONTROL TOTAL DEL TAMAÑO -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/glassmorphism_panel_background"
            android:padding="20dp">

            <!-- Logo con efecto glow -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoCard"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_glow_background" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gps_logo"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <!-- Títulos principales -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peregrino GPS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:letterSpacing="0.02"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/logoCard"
                app:layout_constraintStart_toEndOf="@id/logoCard" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema de seguimiento avanzado"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:alpha="0.8"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/mainTitle"
                app:layout_constraintStart_toEndOf="@id/logoCard" />

            <!-- ✅ INDICADOR DE CONEXIÓN FIJO - NO CRECE -->
            <View
                android:id="@+id/connectionIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/connection_pulse_indicator"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/logoCard"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ✅ INFORMACIÓN DE USUARIO EN SEGUNDA FILA - ALTURA FIJA -->
            <androidx.cardview.widget.CardView
                android:id="@+id/userCard"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/logoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- ✅ CONSTRAINT LAYOUT INTERNO PARA CONTROL TOTAL -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/info_card_gradient"
                    android:padding="12dp">

                    <!-- Ícono de usuario -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/userIconCard"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_background_user" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person"
                            app:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>

                    <!-- ✅ TEXTO DE USUARIO - ALTURA FIJA -->
                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Usuario"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userIconCard"
                        app:layout_constraintEnd_toStartOf="@id/statusBadge" />

                    <!-- ✅ BADGE DE ESTADO - TAMAÑO FIJO CRÍTICO -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/statusBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:minWidth="80dp"
                        android:maxWidth="120dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- ✅ CONTENEDOR DEL TEXTO DE ESTADO CON TAMAÑO FIJO -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@drawable/status_badge_online">

                            <!-- ✅ TEXTO DE CONEXIÓN - CRÍTICO: ALTURA Y LÍNEAS FIJAS -->
                            <TextView
                                android:id="@+id/textConnectionStatus"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:text="⚠️ Conectando..."
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:paddingHorizontal="8dp"
                                android:includeFontPadding="false" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botones flotantes con diseño futurista -->
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:elevation="12dp">

        <!-- Botón Mi ubicación -->
        <Button
            android:id="@+id/buttonMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Mi Ubicación"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_my_location_modern"
            app:iconTint="@android:color/black"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="#FF982F"/>

        <!-- Botón Zona Segura -->
        <Button
            android:id="@+id/buttonZonaSegura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Zona Segura"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_shield_modern"
            app:iconTint="@android:color/black"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="#32AEFF"/>

        <!-- Botón Estado -->
        <Button
            android:id="@+id/buttonDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Estadísticas"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_analytics"
            app:iconTint="@android:color/black"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="#33FF3E"/>

        <!-- ✅ BOTÓN TOGGLE SEGUIMIENTO -->
        <Button
            android:id="@+id/buttonTestWS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Auto-Seguir"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_gps_tracking"
            app:iconTint="@android:color/black"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="#FFC434"/>

    </LinearLayout>

    <!-- Panel inferior rediseñado con elevación controlada -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glassmorphism_bottom_panel"
            android:padding="20dp">

            <!-- Botón Asociar Vehículo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/buttonAssociateDevice"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_associate_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_add_device"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="6dp"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asociar\nVehículo"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.1"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón Zona Segura -->
            <androidx.cardview.widget.CardView
                android:id="@+id/buttonZonaSeguraMainCardView"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_zone_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_shield_modern"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="6dp"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/buttonZonaSeguraMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zona\nSegura"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.1"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón Config GPS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/buttonShowUbicacion"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_config_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/button_share_gradient"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="6dp"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.1"
                            android:maxLines="2"
                            android:text="Compartir Ubicacion"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón Salir -->
            <androidx.cardview.widget.CardView
                android:id="@+id/buttonLogout"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_logout_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_login"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="6dp"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salir"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.1"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Elementos ocultos (compatibilidad) -->
    <ProgressBar
        android:id="@+id/progressBarDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonDescargarOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="Oculto" />

    <!-- Información del dispositivo (oculta) -->
    <TextView
        android:id="@+id/textDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textDeviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>