<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Mapa principal -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@android:color/white" />

    <!-- Panel de informaci贸n superior -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:alpha="0.95">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawableTint="@color/green"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/textDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Informaci贸n del dispositivo"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textDeviceStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Estado del dispositivo"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark"
                android:drawableStart="@drawable/common_full_open_on_phone"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones flotantes mejorados en el lado derecho -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Bot贸n de seguimiento del veh铆culo mejorado -->
        <Button
            android:id="@+id/buttonMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text=" Ubicaci贸n"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:icon="@android:drawable/ic_menu_mylocation"
            app:iconTint="@android:color/white" />

        <!-- Bot贸n de zona segura -->
        <Button
            android:id="@+id/buttonZonaSegura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:icon="@android:drawable/ic_dialog_map"
            app:tint="@android:color/white" />

        <!-- Bot贸n de estado del dispositivo -->
        <Button
            android:id="@+id/buttonDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/holo_orange_dark"
            app:icon="@android:drawable/ic_dialog_info"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Panel inferior con botones principales -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="@android:color/white"
        app:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Bot贸n asociar dispositivo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAssociateDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Asociar\nVeh铆culo"
                android:textSize="12sp"
                app:backgroundTint="@android:color/holo_green_dark"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="top"
                app:cornerRadius="8dp" />

            <!-- Bot贸n zona segura (duplicado para f谩cil acceso) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonZonaSeguraMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Zona\nSegura"
                android:textSize="12sp"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconGravity="top"
                app:cornerRadius="8dp"
                android:onClick="@{() -> buttonZonaSegura.performClick()}" />

            <!-- Bot贸n configuraci贸n GPS -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonShowConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Config\nGPS"
                android:textSize="12sp"
                app:backgroundTint="@android:color/holo_orange_dark"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconGravity="top"
                app:cornerRadius="8dp" />

            <!-- Bot贸n logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Salir"
                android:textSize="12sp"
                app:backgroundTint="@android:color/holo_red_dark"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="top"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Elementos ocultos (para compatibilidad) -->
    <ProgressBar
        android:id="@+id/progressBarDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonDescargarOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="Oculto" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>