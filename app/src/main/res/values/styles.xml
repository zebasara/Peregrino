<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.AlertActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/red</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- Estilo base para la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">#2980B9</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">#1E8449</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo para texto de título grande -->
    <style name="TitleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para texto de subtítulo -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Estilo para botones primarios -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Estilo para FABs extendidos -->
    <style name="ExtendedFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- Estilo para cards de información -->
    <style name="InfoCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="contentPadding">20dp</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="startIconTint">@color/primary_blue</item>
    </style>
</resources>